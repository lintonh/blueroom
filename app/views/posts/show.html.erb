<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<p id="notice"><%= notice %></p>

			<p>
			  <strong>Title:</strong>
			  <%= @post.title %>
			</p>

			<p>
			  <strong>Body:</strong>
			  <%= @post.body %>
			</p>
			<div class="row">
				by <%= User.find(@post.user_id).username %>
			</div>
			<% if @post.user_id == current_user.id %>
			<%= link_to 'Edit', edit_post_path(@post) %> |
			<%= link_to 'Delete ', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
			<% end %>
			<%= link_to 'Back', posts_path %>
		</div>
	</div>
</div>
